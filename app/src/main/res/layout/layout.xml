<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inicial"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="30dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/pedra"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:contentDescription="Pedra"
            android:onClick="pedra"
            android:src="@drawable/pedra" />

        <ImageButton
            android:id="@+id/papel"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:contentDescription="Papel"
            android:onClick="papel"
            android:src="@drawable/papel" />

        <ImageButton
            android:id="@+id/tesoura"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:contentDescription="Tesoura"
            android:onClick="tesoura"
            android:src="@drawable/tesoura" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/escolha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/escolha"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/jogador1EscolhaImagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ximagem"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_marginLeft="48dp"
            android:src="@drawable/x" />

        <ImageView
            android:id="@+id/jogador2EscolhaImagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="10dp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/resultadoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="24sp" />


    </LinearLayout>

    <View
        android:id="@+id/linhaPartida"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="#808080"
        android:visibility="gone" />

    <Button
        android:id="@+id/novoJogo"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/novo"
        android:visibility="gone"
        android:onClick="novoJogo"
        />

</LinearLayout>
